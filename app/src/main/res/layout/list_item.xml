<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"

    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:id="@+id/ll_frame"

        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".7"

            />


        <RelativeLayout
            android:padding="4dp"
            android:layout_weight=".3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:textStyle="bold"
                android:textSize="24sp"

                android:text="Movie Name"
                android:id="@+id/rv_row1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@id/rv_row1"/>
            <TextView
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:text="(Year)"
                android:textSize="16dp"
                android:id="@+id/rv_row12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/rv_row1"
                />


            <TextView
                android:text="adv|animation"
                android:textSize="16sp"
                android:id="@+id/rv_row2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rv_row1"/>


            <RelativeLayout
                android:layout_marginTop="16dp"
                android:layout_below="@id/rv_row2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:text="director"
                    android:textStyle="bold"
                    android:id="@+id/rv_row3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_star_black_24dp"
                   android:layout_marginTop="26dp"




                    />

                <TextView

                    android:paddingTop="8dp"
                    android:paddingLeft="24dp"
                    android:text="rating"
                    android:textStyle="bold"
                    android:id="@+id/rv_row4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rv_row3"/>
                <TextView
                    android:paddingTop="8dp"
                    android:paddingLeft="8dp"
                    android:layout_marginLeft="8dp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/rv_row4"
                    android:text="certification"
                    android:id="@+id/rv_row43"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rv_row3"

                    />
                <TextView
                    android:paddingTop="8dp"
                    android:paddingLeft="8dp"
                    android:layout_marginLeft="8dp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/rv_row43"
                    android:text="time"
                    android:id="@+id/rv_row42"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rv_row3"
                    />
            </RelativeLayout>




        </RelativeLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>